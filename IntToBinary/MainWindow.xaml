<Window x:Class="IntToBinary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Decimal to Binary" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Input" VerticalAlignment="Top" Width="497"/>
        <Button x:Name="convertButton" Content="Convert" HorizontalAlignment="Left" Margin="432,38,0,0" VerticalAlignment="Top" Width="75" Click="convertButton_Click"/>
        <Label x:Name="outputLabel" Content="Output" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="497" Background="#FFCBCBCB"/>
    </Grid>
</Window>
